@model IEnumerable<nyUtdannet2.Models.Page>

@{
    ViewData["Title"] = "Sideadministrasjon";
    Layout = "_Layout";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Sideadministrasjon</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Opprett ny side
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Lukk"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Sider</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead>
                    <tr>
                        <th>Tittel</th>
                        <th>URL-segment</th>
                        <th>Status</th>
                        <th>Opprettet</th>
                        <th>Sist oppdatert</th>
                        <th>Handlinger</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Slug</td>
                                <td>
                                    @if (item.IsPublished)
                                    {
                                        <span class="badge bg-success">Publisert</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Kladd</span>
                                    }
                                </td>
                                <td>@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                                <td>@item.LastModifiedDate.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" data-bs-toggle="tooltip" title="Rediger">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" data-bs-toggle="tooltip" title="Detaljer">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" data-bs-toggle="tooltip" title="Slett">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4">
                                <p class="mb-0">Ingen sider funnet.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}