@{
    ViewData["Title"] = "Home";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
</head>
<body>

    <header class="header">
        <div style="display: flex; align-items: center;">
            <div class="logo">Ny utdannet</div>
                <nav class="nav">
                    <a href="#">Hjem</a>
                    <a href="#">Ledige stillinger</a>
                    <a href="#">Jobbsøknader</a>
                    <a href="#">Favoritter</a>
                </nav>
            </div>
        <div class="nav">
            <a href="/Identity/Account/Login">Logg inn</a>
        </div>
    </header>

    <main class="search-section">
        <form class="search-box">
            <input type="text" placeholder="Job title, skill or company" class="input" />
            <input type="text" placeholder="Town, city or postcode" class="input" />
            <button type="submit" class="btn">SØk</button>
        </form>

        <div class="filters">
            <label><input type="checkbox" /> Permanent</label>
            <label><input type="checkbox" /> Temporary</label>
            <label><input type="checkbox" /> Part Time</label>
        </div>
    </main>

</body>
</html>
