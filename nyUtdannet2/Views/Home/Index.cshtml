@{
    ViewData["Title"] = "Home";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
</head>
<body>

    <header class="header">
        <div class="logo">
            <div class="logo-icon"></div>
            <span class="logo-text">nyUtdannet</span>
        </div>
        <div class="nav">
            <a href="/Identity/Account/Login">👤 Sign in</a>
            <a href="#">☰ Menu</a>
        </div>
    </header>

    <main class="search-section">
        <form class="search-box">
            <input type="text" placeholder="Job title, skill or company" class="input" />
            <input type="text" placeholder="Town, city or postcode" class="input" />
            <button type="submit" class="btn">Search</button>
        </form>

        <div class="filters">
            <label><input type="checkbox" /> Permanent</label>
            <label><input type="checkbox" /> Temporary</label>
            <label><input type="checkbox" /> Part Time</label>
        </div>
    </main>

</body>
</html>
