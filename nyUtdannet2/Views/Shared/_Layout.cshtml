@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="no" dir="ltr">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - nyUtdannet2</title>

    <!-- Bootstrap CSS (only one version needed) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Site-specific styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Project.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/joblisting-mini.css" asp-append-version="true" />


    @RenderSection("Head", required: false)
</head>

<body class="d-flex flex-column min-vh-100">
<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-3">
        <div class="container-fluid">
            <a id="logo" class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">Ny utdannet</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Hjem</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="JobListings" asp-action="Index">Ledige stillinger</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="JobApplications" asp-action="Index">Jobbs√∏knader</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="JobListings" asp-action="Index">Favoritter</a>
                    </li>
                </ul>
                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>

<div class="container flex-grow-1">
    <main role="main" class="pb-4">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted py-3">
    <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
        <div>
            <strong>Kontakt oss:</strong>
            <span class="ms-2"><i class="bi bi-telephone"></i> 00 000 00</span>
            <span class="ms-3"><i class="bi bi-envelope"></i> <a href="mailto:info@nyutdannet.com" class="text-muted">info@nyutdannet.com</a></span>
        </div>
        <div>&copy; 2024 Ny utdannet</div>
    </div>
</footer>

<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
