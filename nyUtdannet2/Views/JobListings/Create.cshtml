@model nyUtdannet2.Models.JobListing

@{
    ViewData["Title"] = "Opprett stillingsannonse";
    Layout = "_Layout";
}

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(to right, #fbd3e9, #bbdff7);">
    <div class="card shadow p-4 w-75">
        <h2 class="text-center mb-4">Opprett stillingsannonse</h2>

        <form asp-controller="JobListings" asp-action="Create" method="post">
            <div class="form-group mb-3">
                <label asp-for="Title">Jobbtittel</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Headline">Overskrift</label>
                <input asp-for="Headline" class="form-control" />
                <span asp-validation-for="Headline" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description">Stillingsbeskrivelse</label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Requirements">Krav</label>
                <textarea asp-for="Requirements" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Requirements" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Benefits">Fordeler (valgfritt)</label>
                <textarea asp-for="Benefits" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Benefits" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LocationType">Arbeidssted</label>
                <select asp-for="LocationType" class="form-control">
                    <option value="On-site">På kontor</option>
                    <option value="Remote">Fjernarbeid</option>
                    <option value="Hybrid">Hybrid</option>
                </select>
                <span asp-validation-for="LocationType" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="City">By (valgfritt)</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SalaryRange">Lønn (valgfritt)</label>
                <input asp-for="SalaryRange" class="form-control" />
                <span asp-validation-for="SalaryRange" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EmploymentType">Ansettelsestype</label>
                <select asp-for="EmploymentType" class="form-control">
                    <option value="Full-time">Fulltid</option>
                    <option value="Part-time">Deltid</option>
                    <option value="Contract">Kontrakt</option>
                    <option value="Internship">Internship</option>
                </select>
                <span asp-validation-for="EmploymentType" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Deadline">Søknadsfrist</label>
                <input asp-for="Deadline" type="datetime-local" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="IsActive" class="form-check-input" checked />
                <label asp-for="IsActive" class="form-check-label">Aktiv stilling</label>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Opprett</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Avbryt</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
