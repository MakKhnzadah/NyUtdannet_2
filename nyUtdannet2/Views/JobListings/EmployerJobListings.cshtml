@model IEnumerable<nyUtdannet2.Models.JobListing>

@{
    ViewBag.Title = "Dine Stillingsannonser";
    Layout = "_Layout";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Dine stillingsannonser</h2>
        <a href="@Url.Action("Create", "JobListings")" class="btn btn-primary">Opprett ny annonse</a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var jobListing in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <partial name="_JobListingMini" model="jobListing" />
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            Du har ingen publiserte stillingsannonser ennå.
        </div>
    }
</div>