@model nyUtdannet2.Models.JobApp

@{
    ViewData["Title"] = "Apply for Job";
    Layout = "_Layout";
}

<h2>Apply for: @Model.Title</h2>

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Apply" method="post">
            <div class="form-group">
                <label asp-for="Summary" class="control-label">Short Summary</label>
                <textarea asp-for="Summary" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Summary" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Content" class="control-label">Application Content</label>
                <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="JobListingId" />
            <input type="hidden" asp-for="UserId" />

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Submit Application</button>
                <a href="@Url.Action("Details", "JobListings", new { id = Model.JobListingId })"
                   class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .form-control {
        margin-bottom: 1rem;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}