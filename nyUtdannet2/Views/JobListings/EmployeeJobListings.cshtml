@model IEnumerable<nyUtdannet2.Models.JobListing>

@{
    ViewBag.Title = "Tilgjengelige Stillinger";
    Layout = "_Layout";
}

@section Head {
    <link rel="stylesheet" href="~/css/joblisting-mini.css" asp-append-version="true" />
}

<div class="job-listings-container">
    <h2 class="mb-4 text-center">Tilgjengelige stillingsannonser</h2>
    @if (Model?.Any() == true)
    {
        <div class="job-listings-grid">
            @foreach (var job in Model)
            {
                <partial name="_JobListingMini" model="job" />
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            Ingen stillingsannonser er tilgjengelige for øyeblikket.
        </div>
    }
</div>