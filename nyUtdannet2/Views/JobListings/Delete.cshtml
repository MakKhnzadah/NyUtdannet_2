@model nyUtdannet2.Models.JobListing

@{
    ViewData["Title"] = "Delete Job Listing";
    Layout = "_Layout";
}

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h3 class="mb-0">Confirm Deletion</h3>
    </div>
    <div class="card-body">
        <h4>Are you sure you want to delete this job listing?</h4>
        <hr />
        
        <div class="mb-4">
            <p><strong>Title:</strong> @Model.Title</p>
            <p><strong>Headline:</strong> @Model.Headline</p>
            <p><strong>Company:</strong> @Model.EmployerUser?.CompanyName</p>
            <p><strong>Location:</strong> @Model.City, @Model.Country (@Model.LocationType)</p>
            <p><strong>Type:</strong> @Model.EmploymentType</p>
            <p><strong>Deadline:</strong> @Model.Deadline.ToString("dd.MM.yyyy")</p>
        </div>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i>Cancel
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    .card {
        max-width: 600px;
        margin: 0 auto;
        border: none;
        border-radius: 10px;
    }
    
    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }
    
    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }
    
    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}