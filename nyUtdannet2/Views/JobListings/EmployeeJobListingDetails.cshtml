@model nyUtdannet2.Models.JobListing

@{
    ViewData["Title"] = "Job Listing Details";
    Layout = "_Layout";
}

<div class="container">
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h2>@Model.Title</h2>
        </div>
        <div class="card-body">
            <h4 class="card-title">@Model.Headline</h4>
            <p class="text-muted mb-4">
                <i class="fas fa-building me-2"></i>@Model.EmployerUser?.CompanyName |
                <i class="fas fa-map-marker-alt me-2 ms-3"></i>@Model.City, @Model.Country (@Model.LocationType) |
                <i class="fas fa-briefcase me-2 ms-3"></i>@Model.EmploymentType
            </p>

            <div class="mb-4">
                <h5>Job Description</h5>
                <p>@Model.Description</p>
            </div>

            <div class="mb-4">
                <h5>Requirements</h5>
                <p>@Model.Requirements</p>
            </div>

            @if (!string.IsNullOrEmpty(Model.Benefits))
            {
                <div class="mb-4">
                    <h5>Benefits</h5>
                    <p>@Model.Benefits</p>
                </div>
            }

            <div class="mb-4">
                <h5>Application Deadline</h5>
                <p>@Model.Deadline.ToString("dd.MM.yyyy")</p>
            </div>
        </div>
        <div class="card-footer bg-light">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Listings
            </a>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 10px;
        }
        .card-header {
            border-radius: 10px 10px 0 0 !important;
        }
    </style>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}