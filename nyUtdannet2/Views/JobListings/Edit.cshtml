@model nyUtdannet2.Models.JobListing

@{
    ViewData["Title"] = "Edit Job Listing";
    Layout = "_Layout";
}

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Edit Job Listing</h3>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EmployerUserId" />
            <input type="hidden" asp-for="CreatedDate" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Title" class="form-label">Job Title</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Headline" class="form-label">Headline</label>
                        <input asp-for="Headline" class="form-control" />
                        <span asp-validation-for="Headline" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="LocationType" class="form-label">Location Type</label>
                        <select asp-for="LocationType" class="form-select">
                            <option value="On-site">On-site</option>
                            <option value="Remote">Remote</option>
                            <option value="Hybrid">Hybrid</option>
                        </select>
                        <span asp-validation-for="LocationType" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="City" class="form-label">City</label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="EmploymentType" class="form-label">Employment Type</label>
                        <select asp-for="EmploymentType" class="form-select">
                            <option value="Full-time">Full-time</option>
                            <option value="Part-time">Part-time</option>
                            <option value="Contract">Contract</option>
                            <option value="Internship">Internship</option>
                        </select>
                        <span asp-validation-for="EmploymentType" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="SalaryRange" class="form-label">Salary Range</label>
                        <input asp-for="SalaryRange" class="form-control" />
                        <span asp-validation-for="SalaryRange" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Deadline" class="form-label">Application Deadline</label>
                        <input asp-for="Deadline" type="datetime-local" class="form-control" />
                        <span asp-validation-for="Deadline" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label">Active Listing</label>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label">Job Description</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Requirements" class="form-label">Requirements</label>
                <textarea asp-for="Requirements" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Requirements" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Benefits" class="form-label">Benefits (Optional)</label>
                <textarea asp-for="Benefits" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Benefits" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="fas fa-save me-2"></i>Save Changes
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="fas fa-times me-2"></i>Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}

<style>
    .card {
        border: none;
        border-radius: 10px;
    }
    
    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }
    
    .form-label {
        font-weight: 500;
    }
    
    textarea.form-control {
        min-height: 120px;
    }
</style>